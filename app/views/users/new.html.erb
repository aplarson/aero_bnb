<div class="container new">

  <% if flash[:errors] %>
    <ul class="errors">
      <% flash[:errors].each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <h1 class="form">Sign up to share flights!</h1>
  
  <form action="<%= users_url %>" method="POST" class="form">
    <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">

    <div class="form-group">
      <label>Username
        <input type="text" name="user[username]" value="<%= @user.username %>" class="form-control">
      </label>
    </div>

    <div class="form-group">
      <label>Email Address
        <input type="text" name="user[email]" value="<%= @user.email %>" class="form-control">
      </label>
    </div>

    <div class="form-group">
      <label>Password
        <input type="password" name="user[password]" class="form-control">
      </label>
    </div>

    <div class="form-group">
      <input type="submit" value="Sign Up!" class='btn btn-primary'>
    </div>
  </form>

</div>