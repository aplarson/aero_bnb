<div class="container">

  <h1>Sign up to share flights!</h1>
  
  <form action="<%= users_url %>" method="POST">
    <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">

    <div class="form-group">
      <label>Username
        <input type="text" name="user[username]" value="<%= @user.username %>" class="form-control">
      </label>
    </div>

    <div class="form-group">
      <label>Email Address
        <input type="text" name="user[email]" value="<%= @user.email %>" class="form-control">
      </label>
    </div>

    <div class="form-group">
      <label>Password
        <input type="password" name="user[password]" class="form-control">
      </label>
    </div>

    <div class="form-group">
      <input type="submit" value="Sign Up!" class='btn btn-primary'>
    </div>
  </form>

</div>