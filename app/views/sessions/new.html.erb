<div class="container new">

  <% if flash[:errors] %>
    <ul class="errors">
      <% flash[:errors].each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <h1 class="form">Sign In</h1>

  <form action="<%= session_url %>" method="POST" class="form">
    <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">

    <div class="form-group">
      <label>Username
        <input type="text" name="user[username]" value="<%= @user.username %>" class="form-control">
      </label>
    </div>

    <div class="form-group">
      <label>Password
        <input type="password" name="user[password]" class="form-control">
      </label>
    </div>

    <div class="form-group">
      <input type="submit" value="Sign In!" class='btn btn-primary'>
    </div>
  </form>

  <div class="guest-sign-in">
    <form action="<%= session_url %>" method="POST" class="form">
      <input type="hidden"
             name="authenticity_token"
             value="<%= form_authenticity_token %>">
      <input type="hidden" name="user[username]" value="Maverick" class="form-control">
      <input type="hidden" name="user[password]" class="form-control" value="password">


      <div class="form-group">
        <input type="submit" value="Guest Sign In!" class='btn btn-success'>
      </div>
    </form>
  </div>

</div>