<label>Departure Airport
  <select name="<%= name %>" class="form-control">
    <% airports.forEach(function (airport) { %>
      <option value="<%= airport.id %>"
        <% if (airport.id == selected) { %>
          selected
        <% } %>
        ><%= airport.escape('name') %></option>
    <% }); %>
  </select>
</label>