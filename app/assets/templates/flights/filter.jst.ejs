<form class="form-inline" id="filter-form">

  <div id="airport-select"></div>

  <div id="date-filter">
    <div class="form-group">
      <label>Departure Date
        <input type="date" 
               class="form-control" 
               name="departure_date" 
               value="<%= params.departure_date %>">
      </label>
    </div>

    <div class="form-group">
      <label>Passengers
        <input type="number" 
               class="form-control" 
               name="passengers" 
               value="<%= params.passengers %>">
      </label>
    </div>
  </div>

  <div id="price-filter">
  </div>
  <div class="form-group">
    <input type="number" 
           id="min-price" 
           name="min_price" 
           readonly 
           class="form-control" 
           value="<%= params.min_price %>">
    <input type="number" 
           id="max-price" 
           name="max_price" 
           readonly 
           class="form-control"
           value="<%= params.max_price %>">

  </div>

</form>