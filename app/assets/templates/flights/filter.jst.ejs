<form class="form-inline" id="filter-form">

  <div class="filter-label">
    <span class="filter-name">Airports</span>
  </div>
  <div id="airport-select" class="active-filters"></div>

  <div class="filter-label">
    <span class="filter-name">Date</span>
  </div>

  <div id="date-filter" class="active-filters">
    <div class="form-group">
      <label>Departure
        <input type="date" 
               class="form-control" 
               name="departure_date" 
               value="<%= params.departure_date %>">
      </label>
    </div>

    <div class="form-group">
      <label>Passengers
        <input type="number" 
               class="form-control" 
               name="passengers" 
               value="<%= params.passengers %>">
      </label>
    </div>
  </div>

  <div class="filter-label">
    <span class="filter-name">Price Range</span>
  </div>
  <div class="active-filters">
    <div id="price-filter">
    </div>
    <p>
      <span id="price-range">From $<%= params.min_price || 0 %> to $<%= params.max_price || 2000 %></span>
    </p>
  </div>
  <div class="form-group">
    <input type="hidden" 
           id="min-price" 
           name="min_price"
           value="<%= params.min_price %>">
    <input type="hidden" 
           id="max-price" 
           name="max_price"
           value="<%= params.max_price %>">

  </div>

</form>