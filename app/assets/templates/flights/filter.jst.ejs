<form class="form-inline" id="filter-form">

  <div id="airport-select"></div>

  <div id="date-filter">
    <div class="form-group">
      <label>Departure Date
        <input type="date" 
               class="form-control" 
               name="departure_date" 
               value="<%= params.departure_date %>">
      </label>
    </div>

    <div class="form-group">
      <label>Passengers
        <input type="number" 
               class="form-control" 
               name="passengers" 
               value="<%= params.passengers %>">
      </label>
    </div>
  </div>

  <div id="price-filter">
    <div class="form-group">
      <label>Minimum Price
        <input type="number" 
               class="form-control" 
               name="min_price" 
               value="<%= params.min_price %>">
      </label>
    </div>

    <div class="form-group">
      <label>Maximum Price
        <input type="number" 
               class="form-control" 
               name="max_price" 
               value="<%= params.max_price %>">
      </label>
    </div>
  </div>

</form>